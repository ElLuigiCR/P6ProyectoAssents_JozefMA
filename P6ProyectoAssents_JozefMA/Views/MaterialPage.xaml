<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P6ProyectoAssents_JozefMA.Views.RegistrationPage"
             Title="Registro">

    <StackLayout>
        <Entry Placeholder="Nombre de usuario" x:Name="UsernameEntry" />
        <Entry Placeholder="Correo electrónico" x:Name="EmailEntry" />
        <Entry Placeholder="Contraseña" IsPassword="True" x:Name="PasswordEntry" />


        <Button Text="Registrarse" Clicked="OnRegisterButtonClicked" />


    </StackLayout>
</ContentPage>
